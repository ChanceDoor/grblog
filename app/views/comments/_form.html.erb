<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label "评论者" %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label "评论内容" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "提交" %>
  </div>
<% end %>
