<h1>文章目录</h1>

<table>
  <tr>
    <th>名称</th>
    <th>标题</th>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '显示', post %></td>
    <td><%= link_to '编辑', edit_post_path(post) %></td>
    <td><%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

